{
  "extends": "@lostrpg/typescript-config/tsconfig.frontend",
  "compilerOptions": {
    "paths": {
      "@lostrpg/frontend/*": ["./src/*"],
      "@lostrpg/backend/*": ["../backend/src/*"],
      "@lostrpg/schema/*": ["../../packages/schema/*"]
    },
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "../../packages/core/**/*.ts",
    "../../packages/schema/**/*.ts",
    "types",
    "../backend/src/**/*.ts",
    "../backend/worker-configuration.d.ts",
    "tests"
  ],
  "exclude": ["node_modules", "dist"]
}
