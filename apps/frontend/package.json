{
  "name": "@lostrpg/frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "dev:mock": "bunx --bun vite --mode mock",
    "prebuild": "bun tsc -b",
    "build": "vite build",
    "lint": "eslint . --fix && bun tsc -b",
    "preview": "bunx --bun vite preview",
    "prepreview:ci": "tsc -b && bunx --bun vite build --mode ci",
    "preview:ci": "bunx --bun vite preview --port 5173 ",
    "test": "vitest run",
    "test:watch": "vitest",
    "ncu": "ncu -u",
    "upgrade-msw": "bunx msw init public --save"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@lostrpg/backend": "workspace:*",
    "@lostrpg/core": "workspace:*",
    "@lostrpg/schemas": "workspace:*",
    "@lostrpg/ui": "workspace:*",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@mui/x-data-grid": "^8.25.0",
    "@reduxjs/toolkit": "^2.11.2",
    "@zip.js/zip.js": "^2.8.15",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "hono": "^4.11.4",
    "lodash": "^4.17.21",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-redux": "^9.2.0",
    "react-router": "^7.12.0",
    "swr": "^2.3.8"
  },
  "devDependencies": {
    "@lostrpg/eslint-config-custom": "workspace:*",
    "@lostrpg/typescript-config": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/file-saver": "^2.0.7",
    "@types/lodash": "^4.17.23",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/react-redux": "^7.1.34",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "npm-check-updates": "^19.3.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
