{
  "name": "@lostrpg/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:bun": "bun run --hot src/index.ts",
    "dev:full": "bun run db:up && bun run db:migrate && bun run dev",
    "dev": "wrangler dev",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:worker": "bun build src/index.ts --outdir dist --target node --minify",
    "start": "bun dist/index.js",
    "deploy": "bun run build:worker && wrangler deploy --minify",
    "deploy:staging": "bun run build:worker && wrangler deploy --env staging --minify",
    "create:localR2": "wrangler r2 bucket create lostrpg-cloudflare-local",
    "ls:R2": "wrangler r2 bucket list",
    "test": "vitest",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "db:up": "cd ../.. && docker-compose up -d postgres",
    "db:down": "cd ../.. && docker-compose down",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint . --fix && bun run tsc -b  --noEmit",
    "type-check": "bun run tsc --noEmit",
    "ncu": "ncu -u"
  },
  "dependencies": {
    "@lostrpg/schemas": "workspace:*",
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251228.0",
    "@lostrpg/eslint-config-custom": "workspace:*",
    "@lostrpg/typescript-config": "workspace:*",
    "@testcontainers/postgresql": "^11.11.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "wrangler": "^4.56.0"
  }
}
